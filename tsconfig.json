{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "es2015",
    "target": "es5",
    //    "jsx": "react",
    "jsx": "react",
    "jsxFactory": "createElement",
    "alwaysStrict": true,
    "rootDirs": [
      "src",
      "does-not-exist"
    ],
    "outDir": "lib",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "removeComments": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "noEmitHelpers": true,
//    "sourceMap": true,
    "types": [
      "inferno"
    ],
    "lib": [
      "dom",
      "es2015.promise",
      "es5",
      "es6",
      "es2015.symbol",
      "es2015.collection",
      "es2017.object"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "test",
    "externals",
    "Temporary",
    "src/**/__tests__",
    "src/**/demo",
    "src/**/examples",
    "src/**/tests",
    "lib",
    "typings"
  ],
  "files": [
    "typings/index.d.ts"
  ]
}